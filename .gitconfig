[alias]
	feature = !hophop gh feature
	pr = !hophop gh pr
[core]
	editor = vim
	ignorecase = false
	excludesfile = ~/.gitignore_global
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[merge]
	tool = opendiff
[user]
	name = Andrea Ascari
	email = andrea.ascari@buildo.io
[push]
	default = simple
